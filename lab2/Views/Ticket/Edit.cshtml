@using lab2.Models.View;
@using lab2.Models.Domain;
@model EditTicketVM;

@{
    var departments = ViewData["Departments"] as IEnumerable<SelectListItem> ?? new List<SelectListItem>(); ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">

            <div class="form-group">
                <label asp-for="Id"></label>
                <input type="hidden" class="form-control" asp-for="Id" />
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
            </div>
            <br />

            <div class="form-group">
                <input class="form-check-input" asp-for="IsClosed" />
                <label asp-for="IsClosed"></label>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="Severity"></label>
                <select asp-for="Severity" asp-items="Html.GetEnumSelectList<Severitys>()"></select>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" asp-items="departments"></select>
            </div>
            <br />
            

            <div class="form-group">
                <label asp-for="DevelopersIds"></label>
                <select asp-for="DevelopersIds" asp-items="ViewBag.awardsListItems"></select>
            </div>
            <br />

            <button class="btn btn-secondary"> Submit </button>

        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



