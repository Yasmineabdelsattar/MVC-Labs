@model Car;


@{
    var cars = Model;
    var source = cars.Source;

}


<div>
    <h6>@cars.Model From @cars.Manufacturer</h6>
    <p>@(DateTime.Now.Year - cars.FirstUseDate.Year) years of usage</p>
    @Html.Raw(cars.HtmlDescription)
    <figure>
        <img src="https://www.shutterstock.com/image-photo/mountains-under-mist-morning-amazing-nature-1725825019" alt="@cars.Model From @cars.Manufacturer" />
        <figcaption>@cars.Model From @cars.Manufacturer</figcaption>
    </figure>


<h4>This car is from @source</h4>
    

</div>
